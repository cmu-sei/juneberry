{
    "$schema": "https://json-schema.org/draft-07/schema",
    "definitions": {
        "plugin_item": {
            "type": "object",
            "properties": {
                "fqcn": { "type": "string" },
                "kwargs": { "type": "object" }
            },
            "required": [ "fqcn" ]
        }
    },
    "type": "object",
    "description": "A configuration for training and running a model file.",
    "properties": {
        "batch_size": { "type": "integer" },
        "description": { "type": "string" },
        "detectron2": {
            "type": "object",
            "properties": {
                "disable_val_loss": { "type": "boolean" },
                "metric_interval": { "type": "integer" },
                "overrides": { "type": "array" },
                "supplements": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            },
            "required": [ ]
        },
        "epochs": { "type": "integer" },
        "evaluation_metrics": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "evaluation_metrics_formatter": { "$ref": "#/definitions/plugin_item" },
        "evaluation_transforms": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "evaluation_target_transforms": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "evaluator": { "$ref": "#/definitions/plugin_item" },
        "format_version": { "type": "string" },
        "label_mapping": { "type": [ "string", "object" ] },
        "mmdetection": {
            "type": "object",
            "properties": {
                "load_from": { "type": "string" },
                "overrides": { "type": "object" },
                "test_pipeline_stages": { "type": "array" },
                "train_pipeline_stages": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "mode": { "type": "string" },
                            "name": { "type": "string" },
                            "stage": { "type": "object" },
                            "tupleize": { "type": "boolean" }
                        },
                        "required": [ "name", "stage" ]
                    }
                }
            },
            "required": [ "load_from" ]
        },
        "model_architecture": {
            "type": "object",
            "properties": {
                "args": { "type": "object" },
                "module": { "type": "string" },
                "previous_model": { "type": "string" },
                "previous_model_version": { "type": "string" }
            },
            "required": [ "module" ]
        },
        "model_transforms": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "platform": {
            "type": "string",
            "enum": [ "detectron2", "mmdetection", "pytorch", "pytorch_privacy", "tensorflow", "tfgloro" ]
        },
        "preprocessors": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "pytorch": {
            "type": "object",
            "properties": {
                "accuracy_args": { "type": "object" },
                "accuracy_fn": { "type": "string" },
                "loss_args": { "type": "object" },
                "loss_fn": { "type": "string" },
                "lr_schedule_fn": { "type": "string" },
                "lr_schedule_args": { "type": "object" },
                "lr_step_frequency": {
                    "type": "string",
                    "enum": [ "epoch", "batch" ]
                },
                "optimizer_fn": { "type": "string" },
                "optimizer_args": { "type": "object" }
            },
            "required": [ ]
        },
        "seed": { "type": "integer" },
        "stopping_criteria": {
            "type": "object",
            "properties": {
                "direction": { "type": "string", "enum": [ "le", "ge" ] },
                "history_key": { "type": "string", "enum": [ "loss", "accuracy", "val_loss", "val_accuracy" ] },
                "abs_tol": { "type": "number" },
                "plateau_count": { "type": "integer" },
                "threshold": { "type": "number" }
            },
            "required": [ ]
        },
        "task": {
            "type": "string",
            "enum": [ "classification", "objectDetection" ]
        },
        "tensorflow": {
            "type": "object",
            "properties": {
                "callbacks": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/plugin_item" }
                },
                "loss_args": { "type": "object" },
                "loss_fn": { "type": "string" },
                "lr_schedule_args": { "type": "object" },
                "lr_schedule_fn": { "type": "string" },
                "metrics": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            { "type": "string" },
                            { "$ref": "#/definitions/plugin_item" }
                        ]
                    }
                },
                "optimizer_args": { "type": "object" },
                "optimizer_fn": { "type": "string" }
            },
            "required": [ "loss_fn", "optimizer_fn" ]
        },
        "timestamp": { "type": "string" },
        "trainer": { "$ref": "#/definitions/plugin_item" },
        "training_dataset_config_path": { "type": "string" },
        "training_transforms": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "training_target_transforms": {
            "type": "array",
            "items": { "$ref": "#/definitions/plugin_item" }
        },
        "validation": {
            "type": "object",
            "properties": {
                "algorithm": {
                    "type": "string",
                    "enum": [ "from_file", "none", "random_fraction", "tensorflow", "torchvision" ]
                },
                "arguments": {
                    "type": "object",
                    "properties": {
                        "file_path": { "type": "string" },
                        "fraction": { "type": "number" },
                        "seed": { "type": "integer" }
                    },
                    "required": [ ]
                }
            },
            "oneOf": [
                {
                    "properties": {
                        "algorithm": { "const": "from_file" },
                        "arguments": { "required": [ "file_path" ] }
                    }
                },
                {
                    "properties": {
                        "algorithm": { "const": "none" },
                        "arguments": { "required": [ ] }
                    }
                },
                {
                    "properties": {
                        "algorithm": { "const": "random_fraction" },
                        "arguments": { "required": [ "fraction" ] }
                    }
                },
                {
                    "properties": {
                        "algorithm": { "const": "tensorflow" },
                        "arguments": { "required": [ ] }
                    }
                },
                {
                    "properties": {
                        "algorithm": { "const": "torchvision" },
                        "arguments": { "required": [ ] }
                    }
                }
            ],
            "required": [ "algorithm" ]
        }
    },
    "required": [
        "batch_size",
        "format_version",
        "model_architecture",
        "training_dataset_config_path",
        "validation"
    ]
}
