{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "info": {
            "type": "object",
            "properties": {
                "year": { "type": "integer" },
                "version": { "type": "number" },
                "description": { "type": "string" },
                "contributor": { "type": "string" },
                "url": { "type": "string" },
                "date_created": { "type": "string" }
            }
        },
        "licenses": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "name": { "type": "string" },
                    "url": { "type": "string" }
                }
            }
        },
        "categories": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "name": { "type": "string" },
                    "supercategory": { "type": "string" },
                    "isthing": { "type": "integer" },
                    "color": {
                        "type": "array",
                        "items": { "type": "integer" }
                    }
                }
            }
        },
        "images": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "width": { "type": "integer" },
                    "height": { "type": "integer" },
                    "file_name": { "type": "string" },
                    "license": { "type": "integer" },
                    "flickr_url": { "type": "string" },
                    "coco_url": { "type": "string" },
                    "data_captured": { "type": "string" }
                }
            }
        },
        "annotations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer" },
                    "image_id": { "type": "integer" },
                    "category_id": { "type": "integer" },
                    "segmentation": {
                        "oneOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "counts": {
                                        "type": "array",
                                        "items": { "type": "integer" }
                                    },
                                    "size": {
                                        "type": "array",
                                        "items": { "type": "integer" }
                                    }
                                }
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "array",
                                    "items": {"type":  "integer"}
                                }
                            }
                        ]
                    },
                    "area": { "type": "number" },
                    "bbox": {
                        "type": "array",
                        "items": { "type": "number" }
                    },
                    "iscrowd": { "type": "integer" }
                }
            }
        }
    },
    "required": [
        "info",
        "categories",
        "images",
        "annotations"
    ]
}
