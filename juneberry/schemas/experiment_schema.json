{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "experiment_schema.json",
    "type": "object",
    "properties": {
        "description": { "type": "string" },
        "format_version": { "type": "string" },
        "filter": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "tag": { "type": "string" },
                    "cmd": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "inputs": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                }
            }
        },
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "filters": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "name": { "type": "string" },
                    "onnx": { "type": "boolean"},
                    "tests": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "classify": { "type": "integer" },
                                "dataset_path": { "type": "string" },
                                "filters": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                },
                                "tag": { "type": "string" },
                                "use_train_split": { "type": "boolean" },
                                "use_val_split": { "type": "boolean" }
                            },
                            "required": [ "dataset_path", "tag" ]
                        }
                    },
                    "tuning": { "type": "string" },
                    "version": { "type": "string" }
                },
                "required": [ "name", "tests" ]
            }
        },
        "reports": {
            "type": "array",
            "items": {
                "allOf": [{ "$ref": "report_schema.json#/$defs/report"}],
                "properties": {
                    "classes": { "type": "string"},
                    "tests": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "tag": { "type": "string" },
                                        "classes": { "type": "string" }
                                    },
                                    "required": [ "tag" ]
                                }
                            }
                }
            }
        },
        "timestamp": { "type": "string" },
        "tuning": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "model": { "type": "string" },
                    "tuning_config": { "type": "string" }
                },
                "required": [ "model", "tuning_config" ]
            }
        }
    },
    "required": []
}
