{
    "$schema": "https://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "description": { "type": "string" },
        "format_version": { "type": "string" },
        "filter": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "tag": { "type": "string" },
                    "cmd": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "inputs": {
                        "type": "array",
                        "items": { "type": "string" }
                    }
                }
            }
        },
        "models": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "filters": {
                        "type": "array",
                        "items": { "type": "string" }
                    },
                    "name": { "type": "string" },
                    "onnx": { "type": "boolean"},
                    "tests": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "classify": { "type": "integer" },
                                "dataset_path": { "type": "string" },
                                "filters": {
                                    "type": "array",
                                    "items": { "type": "string" }
                                },
                                "tag": { "type": "string" },
                                "use_train_split": { "type": "boolean" },
                                "use_val_split": { "type": "boolean" }
                            },
                            "required": [ "dataset_path", "tag" ]
                        }
                    },
                    "version": { "type": "string" }
                },
                "required": [ "name", "tests" ]
            },
            "minItems": 1
        },
        "reports": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "description": { "type": "string" },
                    "fqcn": { "type": "string" },
                    "kwargs": { "type": "object" }
                },
                "required": [
                    "fqcn"
                ],
                "anyOf": [
                    {
                        "properties": {
                            "classes": { "type": "string"},
                            "description": { "type": "string"},
                            "fqcn": { "const": "juneberry.report.roc.ROCPlot" },
                            "kwargs": {
                                "type": "object",
                                "properties": {
                                    "output_filename": { "type": "string"},
                                    "plot_title": { "type": "string"},
                                    "legend_scaling": { "type": "number" },
                                    "curve_sources": { "type": "object" },
                                    "line_width": { "type": "integer" },
                                    "legend_font_size": { "type": "integer" }
                                }
                            },
                            "tests": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "tag": { "type": "string" },
                                        "classes": { "type": "string" }
                                    },
                                    "required": [ "tag" ]
                                }
                            }
                        },
                        "required": [ "description", "fqcn", "tests" ]
                    },
                    {
                        "properties": {
                            "description": { "type": "string"},
                            "fqcn": { "const": "juneberry.reporting.pr.PRCurve" },
                            "kwargs": {
                                "type": "object",
                                "properties": {
                                    "output_dir": { "type": "string"},
                                    "iou": { "type": "number" },
                                    "curve_sources": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "model": { "type": "string"},
                                                "dataset": { "type": "string"}
                                            }
                                        }
                                    },
                                    "tp_threshold": { "type": "number" },
                                    "stats_fqcn": { "type": "string"}
                                }
                            },
                            "tests": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "tag": { "type": "string" },
                                        "classes": { "type": "string" }
                                    },
                                    "required": [ "tag" ]
                                }
                            }
                        },
                        "required": [ "description", "fqcn", "tests" ]
                    },
                    {
                        "properties": {
                            "description": { "type": "string"},
                            "fqcn": { "const": "juneberry.reporting.summary.Summary" },
                            "kwargs": {
                                "type": "object",
                                "properties": {
                                    "md_filename": { "type": "string"},
                                    "csv_filename": { "type": "string"},
                                    "metrics_files": {
                                        "type": "array",
                                        "items": { "type": "string"}
                                    },
                                    "plot_files": {
                                        "type": "array",
                                        "items": { "type": "string"}
                                    }
                                }
                            },
                            "tests": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "tag": { "type": "string" },
                                        "classes": { "type": "string" }
                                    },
                                    "required": [ "tag" ]
                                }
                            }
                        },
                        "required": [ "description", "fqcn", "tests" ]
                    },
                    {
                        "properties": {
                            "description": { "type": "string" },
                            "fqcn": { "type": "string" },
                            "kwargs": { "type": "object" }
                        },
                        "required": [ "description", "fqcn" ]
                    }
                ]
            }
        },
        "timestamp": { "type": "string" }
    },
    "required": [
        "models",
        "reports"
    ]
}
