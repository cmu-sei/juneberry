{
    "batch_size": 4,
    "description": "XOR config",
    "epochs": 500,
    "evaluation_output": "juneberry.pytorch.evaluation.evals.default.DefaultEvaluationOutput",
    "evaluation_procedure": "juneberry.pytorch.evaluation.evals.default.DefaultEvaluationProcedure",
    "format_version": "0.2.0",
    "model_architecture": {
        "module": "juneberry.architectures.pytorch.sample_tabular_nn.XORModel",
        "args": {
            "in_features" : 2, 
            "num_classes": 2,
            "hidden_features": 2,
            "nonlinear": true
        }
    },
    "model_transforms": [
        {
            "fqcn": "juneberry.pytorch.model_transforms.LogModelSummary",
            "kwargs": {
                "imageShape": [2]
            }
        }
    ],
    "platform": "pytorch",
    "pytorch": {
        "accuracy_args": {
            "normalize": true
        },
        "accuracy_fn": "sklearn.metrics.accuracy_score",
        "deterministic": true,
        "loss_fn": "torch.nn.MSELoss",
        "optimizer_fn": "torch.optim.SGD",        
        "optimizer_args": {
            "lr": 0.1,
            "momentum": 0.9
        }
    },
    "seed": 31415,
    "task": "classification",
    "timestamp": "2021-08-16T10:00:00",
    "training_dataset_config_path": "models/model_tests/xor_examples/xor.json",
    "validation": {
        "algorithm": "from_file",
        "arguments": {
            "file_path": "models/model_tests/xor_examples/xor.json"
        }
    },    
    "hints": {
        "max_gpus": 1
    },
    "stopping_criteria": {
        "history_key": "val_accuracy",
        "threshold": 1.0,
        "direction": "ge",
        "abs_tol": 0.001
    }
}